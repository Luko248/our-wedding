{
    "compileOnSave": false,
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "noEmitHelpers": false,
        "module": "CommonJS",
        "target": "ESNext",
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "ES2022",
            "ESNext"
        ],
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./Resources/**/*",
        "scripts"
    ],
    "exclude": [
        "node_modules"
    ],
    "sourceMap": true
}